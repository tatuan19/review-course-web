<div class="container pt-3">
<p id="notice"><%= notice %></p>
<div  style="float: left; with:70%">
  <h1>Teachers</h1>
</div>
<div style="with:30%; float: right; margin: 1% 8.3% 5px;">
  <button type="button" class="btn btn-primary" style="float: left">
    <span><%= link_to 'New Teacher', new_teacher_path, class: 'text-white'%></span>
  </button>
</div>

<table class="table text-center">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th>Subjects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= link_to teacher.name, teacher, class: 'text-dark' %></td>
        <td><%= teacher.age %></td>
        <td><%= teacher.email %></td>
        <td><%= teacher.subjects %></td>
        
          <td>
          <div class="btn-group text-white" >
            <button type="button" class="btn btn-primary "><%= link_to 'Edit', edit_teacher_path(teacher), class: 'text-white' %></button>
            <button type="button" class="btn btn-primary btn-danger"><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } , class: 'text-white'%></button>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

