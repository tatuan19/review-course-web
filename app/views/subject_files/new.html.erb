<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card card-employee card-margin">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            <strong> New Subject File</strong>        
                        </div>
                        <div class="col-6 text-right">
                            <%= link_to "Back", 'javascript:history.back()' %>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <%= render 'form', subject_file: @subject_file %>            
                    </div>
                </div>     
            </div>
        </div>
        <div class="col-6">
            <div class="card card-employee card-margin">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table class="table widget-26 table-striped subject-table-2 mb-0">
                                    <thead class="thead-custom">
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Subject</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% Subject.all.each do |subject| %>
                                          <tr>
                                            <td class="from-subject-id">
                                                <%= subject.id %>
                                            </td>
                                            <td class="from-subject-name" scope="row">
                                                <%= subject.subject_name %>
                                            </td>
                                          </tr>
                                          <!--<br>-->
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
