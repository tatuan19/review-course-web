<div class="container" style="width: 50%">
    <div class="row">
        <div class="col-12">
            <div class="card card-employee card-margin">
                <div class="card-header">
                    <div class="row">
                        <div class="col-6">
                            <strong>Subject Info</strong>      
                        </div>
                        <div class="col-6 text-right">
                            <%= link_to 'Back to List', subject_files_path(:subject => "all") %>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                  <div class="row mb-2">
                    <div class="col-6">
                      <strong>Subject:</strong>
                    </div>
                    <div class="col-6">
                      <%= link_to @subject_file.subject do %>
                        <%= @subject_file.subject.subject_name if @subject_file.subject %>
                      <% end %>
                    </div>
                  </div>
                  <div class="row mb-2">
                    <div class="col-6">
                      <strong>Title:</strong>
                    </div>
                    <div class="col-6">
                      <%= @subject_file.title %>
                    </div>
                  </div>
                  <div class="row mb-2">
                    <div class="col-6">
                      <strong>Description:</strong>
                    </div>
                    <div class="col-6">
                      <%= @subject_file.description %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-6">
                      <strong>File URL:</strong>
                    </div>
                    <div class="col-6">
                      <%= link_to @subject_file.file_url, @subject_file.file_url %>
                    </div>
                  </div>
                  <% if notice != nil %>
                    <div class="alert alert-success text-center mt-3 mb-0" role="alert">
                          <%= notice %>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

